          <textarea id="txtArea" name="data" rows="25" wrap="soft" autofocus cols="100" spellcheck="false" placeholder="Write Your Notes Over Here........"></textarea>
        </form>
        <button id="submit">Save</button>
        <div id="box">
          <div id="Suggestion">  
            <button class="Sbtns">Give todays nutritious diet</button>
            <button class="Sbtns">any salad recipe </button>
