            <button class="Sbtns">Healthy Dessert Alternatives</button>
            <center><h3 style="margin: 3px; margin-left: 5px;">Or Try Custom Query....</h3></center>
          </div>
          <input type="text" id="inpt" placeholder="Custom Query Over Here..." value="Custom Query Over Here..."></input>
          <button id="btn-ai"><i class="ri-magic-line"></i></button>
        </div>
        <button id="copybtn"><i class="ri-clipboard-line"></i></button>
        <button id="AI"><i class="ri-robot-2-line"></i></button>
        <button id="cancel">
          <i class="ri-close-large-fill"></i>
        </button>
      </div>
      <div id="loader">
        <div class="square"></div>
      </div>
    </main> 
